{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "lib/actions/user.actions.ts", "lib/database/moongoose.js", "lib/database/models/user.modal.js", "lib/database/models/transaction.model.js", "lib/database/models/image.model.js", "app/api/webhooks/clerk/route.js", "app/api/webhooks/clerk/route.js"],
  "exclude": ["node_modules"]
}
